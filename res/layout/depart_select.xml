            android:background="@drawable/btn_return_bg_blue" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_alignParentLeft="true" 
            android:layout_centerVertical="true" 
            />
        
        <LinearLayout android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
            <TextView android:id="@+id/txtTitle" android:textSize="18.0sp" android:textColor="#ffffffff" android:gravity="left|center"   android:text="选择单位" android:layout_width="wrap_content" android:layout_height="wrap_content" />
         </LinearLayout>
         
        <Button
            android:id="@+id/btnOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_blue_bg"
            android:gravity="center"
            android:text="确定"
            android:textColor="#ffbedcff"
            android:textSize="16.0sp"
            />
</RelativeLayout>
