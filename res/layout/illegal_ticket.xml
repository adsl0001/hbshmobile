<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#fffbfbfb">
    
    <!-- android:background="@drawable/bg_occasional_enter"   -->

	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="10.0dip"
	    android:layout_marginRight="10.0dip"
	    android:layout_marginTop="23.0dip"
	    android:gravity="center"
	    android:orientation="vertical" >

          <LinearLayout android:orientation="horizontal"  
              android:background="@drawable/item_bg" 
              android:paddingLeft="13.0dip" android:paddingRight="13.0dip" 
              android:layout_width="fill_parent" android:layout_height="40.0dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@null"
                    android:clickable="false"
                    android:gravity="left|center"
                    android:text="名称："
                    android:textColor="#ff000000"
                    android:textSize="16.0sp" />

                <EditText
                    android:id="@+id/ticket_name"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.29"
                    android:background="@null"
                    android:gravity="right|center"
                    android:hint="填写名称"
                    android:text=""
                    android:textColor="#ff888888"
                    android:textSize="16.0sp" />
            </LinearLayout>
            <ImageView android:background="@drawable/img_gray_thread" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="9.0dip" android:layout_marginRight="9.0dip" />
            <LinearLayout 
                android:orientation="horizontal"
                android:background="@drawable/item_bg" 
                android:paddingLeft="13.0dip" android:paddingRight="13.0dip" 
                android:layout_width="fill_parent" 
                android:layout_height="40.0dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@null"
                    android:gravity="left|center"
                    android:text="违章监理公司："
                    android:textColor="#ff000000"
                    android:textSize="16.0sp" />

                <EditText
                    android:id="@+id/ticket_jldepart"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:gravity="right|center"
                    android:hint="选择监理单位"
                    android:editable="false"
                    android:text=""
                    android:textColor="#ff888888"
                    android:textSize="16.0sp" />

            </LinearLayout>
  			<ImageView android:background="@drawable/img_gray_thread" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="9.0dip" android:layout_marginRight="9.0dip" />
             
             <LinearLayout android:orientation="horizontal"
                 android:background="@drawable/item_bg" 
                 android:paddingLeft="13.0dip" android:paddingRight="13.0dip" 
                 android:layout_width="fill_parent" 
                 android:layout_height="40.0dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@null"
                    android:gravity="left|center"
                    android:text="监理公司罚款："
                    android:textColor="#ff000000"
                    android:textSize="16.0sp" />

                <EditText
                    android:id="@+id/ticket_jlamount"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:ems="10"
                    android:gravity="right|center"
                    android:hint="填写金额"
                    android:inputType="number"
                    android:text=""
                    android:textColor="#ff888888"
                    android:textSize="16.0sp" >

				<requestFocus />
				</EditText>

            </LinearLayout>
             <ImageView android:background="@drawable/img_gray_thread" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="9.0dip" android:layout_marginRight="9.0dip" />
             
             <LinearLayout 
                android:orientation="horizontal"  
                android:background="@drawable/item_bg" 
                android:paddingLeft="13.0dip" android:paddingRight="13.0dip"
                android:layout_width="fill_parent" android:layout_height="40.0dip">

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="fill_parent"
                     android:background="@null"
                     android:gravity="left|center"
                     android:text="违章施工单位："
                     android:textColor="#ff000000"
                     android:textSize="16.0sp" />

                <EditText
                    android:id="@+id/ticket_depart"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:editable="false"
                    android:gravity="right|center"
                    android:hint="选择施工单位"
                    android:textColor="#ff888888"
                    android:textSize="16.0sp" />

            </LinearLayout>
             <ImageView android:background="@drawable/img_gray_thread" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="9.0dip" android:layout_marginRight="9.0dip" />
             
             <LinearLayout android:orientation="horizontal"
                 android:background="@drawable/item_bg" 
                 android:paddingLeft="13.0dip" android:paddingRight="13.0dip" 
                 android:layout_width="fill_parent" 
                 android:layout_height="40.0dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@null"
                    android:gravity="left|center"
                    android:text="施工单位罚款："
                    android:textColor="#ff000000"
                    android:textSize="16.0sp" />

                <EditText
                    android:id="@+id/ticket_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:ems="10"
                    android:gravity="right|center"
                    android:hint="填写金额"
                    android:inputType="number"
                    android:text=""
                    android:textColor="#ff888888"
                    android:textSize="16.0sp" >

				<requestFocus />
				</EditText>

            </LinearLayout>
            <ImageView android:background="@drawable/img_gray_thread" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="9.0dip" android:layout_marginRight="9.0dip" />
             
             <LinearLayout android:orientation="horizontal"
                 android:background="@drawable/item_bg" 
                 android:paddingLeft="13.0dip" 
                 android:paddingRight="13.0dip" 
                 android:layout_width="fill_parent" 
                 android:layout_height="40.0dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@null"
                    android:gravity="left|center"
                    android:text="罚款日期："
                    android:textColor="#ff000000"
                    android:textSize="16.0sp" />

                <TextView
                    android:id="@+id/ticket_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:textSize="16.0sp"
                    android:gravity="right|center" />

            </LinearLayout>
           <ImageView android:background="@drawable/img_gray_thread" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="9.0dip" android:layout_marginRight="9.0dip" />
             
           <LinearLayout android:orientation="horizontal"
                 android:background="@drawable/item_bg" 
                 android:paddingLeft="13.0dip" 
                 android:paddingRight="13.0dip"
                 android:layout_width="fill_parent"
                 android:layout_height="40.0dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@null"
                    android:gravity="right|center"
                    android:text="罚款类型："
                    android:textColor="#ff000000"
                    android:textSize="16.0sp" />

                <Spinner
                    android:id="@+id/ticket_type"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="right|center"
                    android:layout_marginLeft="20dp"
                    android:background="@null"
                    android:layout_weight="1.0"
                    android:gravity="right|center"
                    android:textColor="#ff888888"
                    android:textSize="16.0sp" />

            </LinearLayout>
           <ImageView android:background="@drawable/img_gray_thread" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="9.0dip" android:layout_marginRight="9.0dip" />
           
            <LinearLayout android:orientation="horizontal"
                 android:background="@drawable/item_bg" 
                 android:paddingLeft="13.0dip" android:paddingRight="13.0dip" 
                 android:layout_width="fill_parent" 
                 android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/ticket_cause"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:layout_weight="0.84"
                    android:background="@null"
                    android:gravity="left|center"
                    android:hint="填写详细罚款原因"
                    android:minLines="3"
                    android:singleLine="false"
                    android:text=""
                    android:textColor="#ff888888"
                    android:textSize="14.0sp" />

            </LinearLayout>
            <ImageView android:background="@drawable/img_gray_thread" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="9.0dip" android:layout_marginRight="9.0dip" />
             
             <LinearLayout 
                android:orientation="horizontal"  
                android:background="@drawable/item_bg" 
                android:paddingLeft="13.0dip" android:paddingRight="13.0dip"
                android:layout_width="fill_parent" android:layout_height="40.0dip">

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="fill_parent"
                     android:background="@null"
                     android:gravity="left|center"
                     android:text="下一步审批人："
                     android:textColor="#ff000000"
                     android:textSize="16.0sp" />

                <EditText
                    android:id="@+id/ticket_nextperson"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:editable="false"
                    android:gravity="right|center"
                    android:hint="选择审批人"
                    android:textColor="#ff888888"
                    android:textSize="16.0sp" />

            </LinearLayout>
                       
           <ImageView android:background="@drawable/img_gray_thread" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="9.0dip" android:layout_marginRight="9.0dip" />
  
           <LinearLayout android:orientation="horizontal"
                 android:background="@drawable/item_bg" android:paddingLeft="13.0dip" android:paddingRight="13.0dip" android:layout_width="fill_parent" android:layout_height="40.0dip">

             </LinearLayout>

             <LinearLayout
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:background="@drawable/item_bg"
                 android:orientation="vertical"
                 android:paddingLeft="13.0dip"
                 android:paddingRight="13.0dip" >

                <Button
                    android:id="@+id/ticket_takephoto"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="上传照片"
                    android:textColor="#ff888888"
                    android:textSize="16.0sp" 
                    android:layout_weight="1.0"/>

		    <Gallery
		        android:id="@+id/gallery_photo"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content" 
		        android:spacing="2dip" />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/item_bg"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="13.0dp"
                android:paddingLeft="13.0dip"
                android:paddingRight="13.0dip" >
		    
		    	<TextView  
			    android:id="@+id/txt_gallery_page"       
			    android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
		        android:layout_marginBottom="5dip"
		        android:layout_marginRight="20dp"
		        android:textSize="16.0sp"
		      	android:text=""
		        />
		    	
		    	<TextView  
			    android:id="@+id/txt_photo_upload"       
			    android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
		        android:layout_marginBottom="5dip"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:gravity="center"
		        android:textSize="16.0sp"
		        android:visibility="gone"
		      	android:text="上传中..."
		        />
		    	
                <Button
                    android:id="@+id/btn_photo_del"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
		        	android:layout_marginRight="10dp"
                    android:text=" 删 除  "
                    android:textColor="#ff888888"
                    android:textSize="16.0sp" 
                    android:visibility="gone"
                    />
            </LinearLayout>
            <LinearLayout android:orientation="horizontal"  
	               android:background="@drawable/item_bg" 
	               android:paddingLeft="13.0dip" 
	               android:paddingRight="13.0dip" 
	               android:paddingBottom="13.0dp"
	               android:layout_width="fill_parent" 
	               android:layout_height="wrap_content"
	               android:visibility="gone">
                <Button
                    android:id="@+id/ticket_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="保存草稿"
                    android:textColor="#ff888888"
                    android:textSize="16.0sp" 
                    android:layout_weight="1.0"/>
            </LinearLayout>
             <LinearLayout android:orientation="horizontal"
                 android:background="@drawable/item_bg" android:paddingLeft="13.0dip" android:paddingRight="13.0dip" android:layout_width="fill_parent" android:layout_height="40.0dip">

             </LinearLayout>
        </LinearLayout>
        
</ScrollView>
