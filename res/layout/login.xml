<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="right"
    android:orientation="vertical" 
    android:background="#CCCCCC"
    >

        <ImageView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/login_logo" 
            android:paddingTop="80dp"
            android:paddingBottom="20dp"
            android:gravity="center"/>

        <RelativeLayout
            android:id="@+id/layout_login_logn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

		       <RelativeLayout android:id="@+id/layout_bottom_setting" android:background="@drawable/bg_enter_bule" android:padding="10.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="28.0dip" android:layout_marginTop="20.0dip" android:layout_marginRight="28.0dip">
		            <RelativeLayout android:id="@+id/layout_birthdate" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true">
		                <TextView android:id="@+id/lbl_login_account" android:layout_marginLeft="8.0dip" android:layout_marginBottom="12.0dip" android:text="账号:" android:layout_alignParentLeft="true" android:layout_centerVertical="true" style="@style/form_label" />
		                <EditText android:id="@+id/txt_login_account" android:inputType="phone" android:background="@null" android:padding="4.0dip" android:layout_width="fill_parent" android:text="" android:layout_toRightOf="@id/lbl_login_account" android:layout_centerVertical="true" style="@style/form_label" />
		            </RelativeLayout>
		            <ImageView android:id="@+id/layout_devider" android:background="@drawable/devider_line" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/layout_birthdate" />
		            <RelativeLayout android:id="@+id/layout_location" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/layout_devider">
		                <TextView android:id="@+id/tv_location"  android:layout_marginLeft="8.0dip" android:layout_marginTop="12.0dip" android:layout_marginBottom="12.0dip" android:text="密码:" android:layout_alignParentLeft="true" android:layout_centerVertical="true" style="@style/form_label" />
		                <EditText android:id="@+id/txt_login_password" android:background="@null" android:padding="4.0dip" android:layout_width="fill_parent" android:textColor="@color/auth_light_black" android:inputType="textPassword"  android:text="" android:layout_toRightOf="@id/tv_location" android:layout_centerVertical="true" style="@style/form_label" />
		            </RelativeLayout>
		        </RelativeLayout>
        </RelativeLayout>
         <Button
                android:id="@+id/btn_login"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_login1"
                android:padding="8dp"
                android:text="登录"
                android:textSize="22dp"
                android:layout_marginLeft="28.0dip" 
                android:layout_marginTop="20.0dip" 
                android:layout_marginRight="28.0dip"
                android:textColor="@color/auth_white"
               	 />
          <TextView 
             android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35.0dip" 
                android:layout_marginTop="20.0dip" 
                android:layout_marginRight="35.0dip"
                android:layout_gravity="center"
                android:textColor="#8B795E"
                android:text="友情提示："
             />
         <TextView 
             android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35.0dip" 
                android:layout_marginRight="35.0dip"
                android:layout_gravity="center"
                android:textColor="#8B795E"
                android:text="1、账号为公积金号，形如57000，密码为集成平台密码。"
             />
         <TextView 
             android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35.0dip" 
                android:layout_marginRight="35.0dip"
                android:layout_gravity="center"
                android:textColor="#8B795E"
                android:text="2、为保证账户安全，登录账号将和移动设备进行绑定。账号仅能在已授权的绑定设备上进行登录。(如一个账号确需在多个设备上使用，请和信息中心帮助热线2735236联系)"
             />
</LinearLayout>
